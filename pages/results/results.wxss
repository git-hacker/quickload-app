/* pages/results/results.wxss */
.container {
    height: 100%;
}

.results-container {
    display: flex;
    justify-content: space-around;
    padding: 3%;
}
.notfound {
    width: 100vw;
    text-align: center;
}
.card {
 margin-top: 10rpx;
 width: 90vw;
 background-color: white;
}

.card-head {
 display: inline-flex;
 background: linear-gradient(to bottom, #ffdc3e, #f7bd1e);
 width: 100%;
 font-size: 12pt;
 border-radius: 10rpx 10rpx 0 0;
 padding-top: 5rpx;
 padding-bottom: 5rpx;
}

.card-body {
 border: 2rpx solid rgb(236, 197, 20);
 padding-top:15rpx;
}

.card-body-left {
 font-size: 11pt;
 width: 50%;
}

.card-body-right {
    width: 50%;
}

.sm-text {
    font-size: 11pt;
    align-self: flex-end;
}

.big-red-text {
  font-weight: bold;
  font-size: 15pt;
  color: crimson;
   align-self: flex-end;
}

.row {
  justify-content: flex-end;
}

.button-box {
    align-content: flex-end;
}
.details-btn {
 background: linear-gradient(to bottom, #0575e6, #1035bd);
 box-shadow:  0px 1px 5px rgba(0, 0, 0, 0.5);
 color: white;
 margin: 15rpx;
 width: 75%;
 font-size: 12pt;
}

.hover {
  background: rgb(1, 87, 185);
  box-shadow: none
}
