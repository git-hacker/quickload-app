<!--pages/driver/driver.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="form-container col">

    <view><input name="Driver License" class="" placeholder="Driver License #" /></view>
    origin destination
    <view class="loc-picker">
      <view class="input">
        <input placeholder="选择地址" value="{{province}}-{{city}}-{{county}}" focus="{{focus}}" bindfocus="open" />
      </view>
    </view>

    
<view class="row">
  truck type: 
  <view>
    <picker mode="selector" range="{{truckType}}" value="{{truckTypeIndex}}" bindchange="listenerPickerSelected">
        <text>{{truckType[truckTypeIndex]}}</text>
    </picker>
  </view>
</view>

<view class="row">
  length: 
  <view>
    <picker mode="selector" range="{{length}}" value="{{lengthIndex}}" bindchange="listenerPickerSelected2">
        <text>{{length[lengthIndex]}}</text>
    </picker>
  </view>
</view>

<view class="row">
  wheels axles: 
  <view>
    <picker mode="selector" range="{{axles}}" value="{{axlesIndex}}" bindchange="listenerPickerSelected3">
        <text>{{axles[axlesIndex]}}</text>
    </picker>

  </view>
</view>

<view class="section">
  <view class="section__title">多列选择器</view>
  <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
    <view class="picker">
      当前选择：{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
    </view>
  </picker>
</view>

<button class="big-btn search" hover-class="hover" bindtap="">快载搜索</button>
    </view>
